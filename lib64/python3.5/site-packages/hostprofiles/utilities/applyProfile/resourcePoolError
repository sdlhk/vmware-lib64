import os
import sys
from distutils.sysconfig import get_python_lib
sys.path.append(os.path.join(get_python_lib(), 'hostprofiles/'))
from pyEngine import statusManager
sm = statusManager.LoadStatusManager()
errStr = "Failed to configure resource pool."
if len(sys.argv) > 1:
    errStr = sys.argv[1]
sm.SetStateValue('RP_ERROR_STATELESS_BOOT', errStr)